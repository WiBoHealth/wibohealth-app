# Force UTF-8 encoding for all files
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .htm .js .css .json

# Set content type with UTF-8 for HTML files
<FilesMatch "\.(html|htm)$">
    Header set Content-Type "text/html; charset=utf-8"
</FilesMatch>

# Clean URLs (remove .html extension)
RewriteEngine On

# Redirect /nl/ to main site (Dutch version removed)
RewriteRule ^nl/?$ / [R=301,L]
RewriteRule ^nl/(.*)$ /$1 [R=301,L]

# Clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L]
